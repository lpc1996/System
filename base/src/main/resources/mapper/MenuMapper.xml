<mapper namespace="com.lpc.module2.mapper.MenuMapper">
  <resultMap id="BaseResultMap" type="Menu">
    <!--@mbg.generated-->
    <!--@Table menu-->
    <id column="id" jdbcType="BIGINT" property="id" />
