<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lpc.ui.openJFX.LoginWindow">
   <padding>
      <Insets bottom="10" left="25" right="25" top="25" />
   </padding>
   <children>
   
      <!-- 窗体标题 -->
      <Text text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
      <!-- 用户名标签 -->
      <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <!-- 用户名输入框 -->
      <TextField fx:id="userNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <!-- 密码标签 -->
      <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
      <!-- 密码输入框 -->
      <PasswordField fx:id="passField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <!-- 登陆按钮 使用hbox布局面板 以及添加事件 -->
      <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <children>
            <Button fx:id="submitBtn" onAction="#login" text="登录" />
            <Button fx:id="registerBtn" onAction="#register" text="注册" />
         </children>
      </HBox>
      <!-- 文本提示 -->
      <Text fx:id="actionTarget" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

